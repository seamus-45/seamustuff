depend() {
	need net
}

checkconfig() {
	if [ ! -f ${CONFIGFILE} ]; then
		eerror "Config file missing at ${CONFIGFILE}"
		return 1
	fi
}

start() {
	ebegin "Starting ${SVCNAME}"
	start-stop-daemon --start --name /usr/bin/ltsp-cluster-accountmanager -- --daemon \
	 --pidfile /var/run/ltsp-cluster-accountmanager.pid \
	 --logfile=$LOGFILE $CONFIGFILE
	eend $?
}

stop() {
	ebegin "Stopping ${SVCNAME}"
	start-stop-daemon --stop --exec /usr/sbin/ltsp-cluster-accountmanager \
	 --pidfile /var/run/ltsp-cluster-accountmanager.pid
	eend $?
}
