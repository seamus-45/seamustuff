# Calculate path=/tmp name=sync-tm-calculate exec=/bin/bash

# Add and/or Sync our custom overlay
#?exists(/var/lib/layman/tm-calculate)==#
chroot #-cl_assemble_path-# /bin/bash -c "env-update && source /etc/profile && layman -o 'https://raw.github.com/tm-calculate/tm-calculate/master/tm-calculate.xml' -f -k -a tm-calculate" &>/dev/null
#exists#
#?exists(/var/lib/layman/tm-calculate)!=#
chroot #-cl_assemble_path-# /bin/bash -c "env-update && source /etc/profile && layman -s tm-calculate" &>/dev/null
#exists#

