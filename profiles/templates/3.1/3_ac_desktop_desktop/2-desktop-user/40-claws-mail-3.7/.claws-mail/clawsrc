[Common]
# автоматически показывать изображения
display_image=1
resize_image=1
inline_image=1

# показывать панел заголовка над просмотром сообщения
display_header_pane=1

# не показывать (короткие) служебные заголовки
display_header=0

# Преобразовывать HTML сообщения в текст
render_html=0

# Отрисовывать HTML сообщения через плагин
invoke_plugin_on_html=1

# Выбирать HTML часть из multipart сообщений
promote_html_part=1

# Отображать вложенные изображения
show_inline_attachments=1

# добавлять адрес в назначение при двойном щелчке
add_address_by_click=1

[Plugins_GTK2]
# плагин отображения HTML сообщений
/usr/lib/claws-mail/plugins/fancy.so
# плагин сворачивания окна в трей
/usr/lib/claws-mail/plugins/trayicon.so

[fancy]
auto_load_images=1
block_extern_content=1
open_external=1
enable_gnome_proxy=1

[TrayIcon]
# закрывать окно в трей
close_to_tray=1
# не минимизировать окно в трей
hide_when_iconified=0
hide_at_startup=0
